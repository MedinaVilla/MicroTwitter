<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/components/Acceso/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>registro</servlet-name>
        <jsp-file>/components/Acceso/registro.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>perfil</servlet-name>
        <jsp-file>/components/Usuario/perfil.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>panel</servlet-name>
        <jsp-file>/components/VisorTweets/visor.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>loguearse</servlet-name>
        <jsp-file>/components/Acceso/loguearse.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>uploadImage</servlet-name>
        <servlet-class>Java.imageUpload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usuarios</servlet-name>
        <jsp-file>/components/VisorTweets/searchUsers.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <jsp-file>/components/Acceso/cerrarSesion.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>follow</servlet-name>
        <jsp-file>/components/VisorTweets/seguirUsuario.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>submitTweet</servlet-name>
        <servlet-class>Java.imageUploadTweet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>seguidores</servlet-name>
        <jsp-file>/components/Usuario/seguidores.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>seguidos</servlet-name>
        <jsp-file>/components/Usuario/seguidos.jsp</jsp-file>
    </servlet>
        <servlet>
        <servlet-name>unfollow</servlet-name>
        <jsp-file>/components/Usuario/dejarSeguirUsuario.jsp</jsp-file>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registro</servlet-name>
        <url-pattern>/registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>perfil</servlet-name>
        <url-pattern>/perfil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>panel</servlet-name>
        <url-pattern>/panel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loguearse</servlet-name>
        <url-pattern>/loguearse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>uploadImage</servlet-name>
        <url-pattern>/registrarse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>usuarios</servlet-name>
        <url-pattern>/busqueda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>follow</servlet-name>
        <url-pattern>/follow</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>submitTweet</servlet-name>
        <url-pattern>/submitTweet</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>seguidores</servlet-name>
        <url-pattern>/perfil/seguidores</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>seguidos</servlet-name>
        <url-pattern>/perfil/seguidos</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>unfollow</servlet-name>
        <url-pattern>/unfollow</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
